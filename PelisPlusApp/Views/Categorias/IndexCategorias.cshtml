@model IEnumerable<CategoriasModel>
@{
    ViewData["Title"] = "Listado de Categorias";

}

<h1>Listado de Categorias</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="mt-3 mb-3">
                <a asp-action="CrearCategoria" asp-controller="Categorias" class="btn btn-success">Nueva Categoria</a>
            </div>

            <table class="table table-bordered table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Restriccion de edad</th>
                        <th>Nota</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var categoria in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(item => categoria.Id_categoria)</td>
                            <td>@Html.DisplayFor(item => categoria.Nombre_categoria)</td>
                            <td>@Html.DisplayFor(item => categoria.Descripcion_categoria)</td>
                            <td>@Html.DisplayFor(item => categoria.Restriccion_edad_categoria)</td>
                            <td>@Html.DisplayFor(item => categoria.Nota_categoria)</td>
                            <td>
                                <a asp-action="EditarCategoria" asp-controller="Categorias" asp-route-id="@categoria.Id_categoria" class="btn btn-success">Editar</a>
                                <a asp-action="EliminarCategorias" asp-controller="Categorias" asp-route-id="@categoria.Id_categoria" class="btn btn-success">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
