@model IEnumerable<PeliculasModel>

@{
	ViewData["Title"] = "Coleccion de Peliculas";
}
<h1>Coleccion de Peliculas</h1>

<div class ="container">
	<div claas="row">
		<div class="col-md-12">

			<div class="mt-3 mb-3">
				<a asp-action="Create" asp-controller="Peliculas" class="btn btn-success">
					Agregar pelicula
				</a>
			</div>
			<table class="table table-bordered table-striped table-responsive">
				<thead>
					<tr>
						<th>Id_pelicula</th>
						<th>Titulo</th>
						<th>Categoria</th>
						<th>Sinopsis</th>
						<th>Duracion</th>
						<th>Director</th>
						<th>Fecha_estreno</th>
						<th>Acciones</th>

					</tr>

				</thead>
				<tbody>
					@foreach(var pelicula in Model)
					{
						<tr>
							<td>@Html.DisplayFor(item => pelicula.Id_pelicula)</td>
							<td>@Html.DisplayFor(item => pelicula.Titulo)</td>
							<td>@Html.DisplayFor(item => pelicula.Categoria)</td>
							<td>@Html.DisplayFor(item => pelicula.Sinopsis)</td>
							<td>@Html.DisplayFor(item => pelicula.Duracion)</td>
							<td>@Html.DisplayFor(item => pelicula.Director)</td>
							<td>@Html.DisplayFor(item => pelicula.Fecha_estreno)</td>
							<td>
								<a 
									asp-action="Editar"
								    asp-controller ="Peliculas" 
								    asp-route-id="@pelicula.Id_pelicula"
									class="btn btn-primary">
									Editar
								</a>

								<a 
									asp-controller="Peliculas"
									asp-action="Eliminar"
									asp-route-id="@pelicula.Id_pelicula"
									class="btn btn-danger">
									Eliminar
								</a>
							</td>
						</tr>
					}

				</tbody>


			</table>

		</div>

	</div>

</div>