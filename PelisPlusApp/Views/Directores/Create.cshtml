@model DirectoresModel
@{
    ViewData["Title"] = "Nuevo Director";
}

<h1>Nuevo Director</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!--Indica que solo muestre los msj de error de este modelo-->
            <div asp-validation-summary="ModelOnly"></div>

            <form asp-action="Create">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" type="text" class="form-control">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Apellido" class="form-label"></label>
                    <input asp-for="Apellido" type="text" class="form-control">
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Nacionalidad" class="form-label"></label>
                    <input asp-for="Nacionalidad" type="text" class="form-control">
                    <span asp-validation-for="Nacionalidad" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Premios" class="form-label"></label>
                    <input asp-for="Premios" type="text" class="form-control">
                    <span asp-validation-for="Premios" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>
